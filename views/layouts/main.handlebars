<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stlyes.css" />
    <script
      src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js"
      integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"
      integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Anton&family=Bungee&family=Orbitron:wght@900&family=Passion+One:wght@700&display=swap"
      rel="stylesheet"
    />

    <title>Team Lasso</title>

  </head>
  <body
    style="background-image: linear-gradient(to bottom right, rgb(41, 4, 163) , rgb(12, 72, 236));"
  >
    <div class="container-fluid p-0">
      <div>
        <!-- Jumbotron -->
        <div
          class="mx-w text-center bg-image"
          style="
          background-image: url(https://www.tampabay.com/resizer/4ZoAgHljRSH0BDSsWuYl8lr3QNs=/1600x900/smart/cloudfront-us-east-1.images.arcpublishing.com/tbt/RLVAC6RWJVDVXEH4MVGUKKOSUQ.jpeg);
         height: 40rem; background-repeat: no-repeat; background-size: 100%;
        "
        >
          <div
            class="mask"
            style="background-color: rgba(0, 0, 0, 0); height: 30rem;"
          >
            <h1
              class="mb-3 fw-4 text-decoration-underline"
              style="font-family: Passion One; font-size: 5vw; color: red"
            ><img
                src="https://preview.redd.it/ncvcfof1yqd71.png?width=640&crop=smart&auto=webp&s=413a1764d029aa049d0a6599d92b6b8f5fdaa3b6"
                style="padding: 1vw;  width: 20vw;"
                alt="imagelogo"
              />AF<span style="color: blue">C</span>
              Richmond<img
                src="https://preview.redd.it/ncvcfof1yqd71.png?width=640&crop=smart&auto=webp&s=413a1764d029aa049d0a6599d92b6b8f5fdaa3b6"
                style="padding: 1vw;  width: 20vw;"
                alt="imagelogo"
              /></h1>
            <p
              class="mb-3 fs-3 text-decoration-underline"
              style="font-family: Passion One;color: yellow"
            >
              A Premier League Football Club
            </p>

          </div>
        </div>
        <!-- Jumbotron -->
      </div>
      <div>
        <ul
          class="nav nav-tabs navbar justify-content-center fs-2"
          style="text-align: center; background-color: red;"
        >
          <li class="nav-item ms-3 mb-1" style="width: 250px;">
            <a
              class="nav-link"
              aria-current="page"
              href="/"
              style="font-family: Passion One; color: yellow; background-image: linear-gradient(to bottom right, rgb(41, 4, 163) , rgb(12, 72, 236));"
            >Players</a>
          </li>

          <li class="nav-item ms-3 mb-1" style="width: 250px;">
            <a
              class="nav-link"
              href="/api/staff"
              style="font-family: Passion One; color: yellow;background-image: linear-gradient(to bottom right, rgb(41, 4, 163) , rgb(12, 72, 236));"
            >Staff</a>
          </li>
          {{#if loggedIn}}
            <li class="nav-item ms-3 mb-1" style="width: 250px;">
              <a
                class="nav-link"
                id="logout"
                style="font-family: Passion One; color: yellow;background-image: linear-gradient(to bottom right, rgb(41, 4, 163) , rgb(12, 72, 236));"
              >Logout</a>
            </li>
          {{else}}
            <li class="nav-item ms-3 mb-1" style="width: 250px;">
              <a
                class="nav-link"
                href="/login"
                style="font-family: Passion One; color: yellow;background-image: linear-gradient(to bottom right, rgb(41, 4, 163) , rgb(12, 72, 236));"
              >Admin Login</a>

            </li>
          {{/if}}
        </ul>
      </div>
    </div>
    <main class="container container-fluid mt-5">
      <div class="row mx-2">
        <!-- body -->
        {{{body}}}
        <!-- body -->
      </div>
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    {{#if loggedIn}}
    <script src="/js/logout.js"></script>
    {{/if}}
  </body>
</html>